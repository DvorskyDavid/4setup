:root {
  --bg: #0b0f17;
  --panel: #0f1724;
  --text: #e5e7eb;
  --muted: #9ca3af;
  --primary: #0ea5e9; /* sky-500 */
  --primary-600: #0284c7;
  --ring: rgba(14, 165, 233, 0.4);

  /* Grid parameters */
  --grid-size: 60px;          /* spacing between lines */
  --grid-line: 1px;           /* line thickness */
  --grid-intensity: 0.10;     /* brightness of grid lines */
  --grid-tilt-min: 0deg;      /* starting tilt on load */
  --grid-tilt-max: 88deg;     /* max tilt (approaches a line) */
  --grid-perspective: 1200px; /* camera perspective */

  color-scheme: dark;
}

* { box-sizing: border-box; }

html, body {
  margin: 0;
  padding: 0;
  min-height: 100%;
}

body {
  font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica Neue, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  background: transparent;
  color: var(--text);
}

#app-root {
  min-height: 100vh;
  position: relative;
  background: linear-gradient(180deg, #0a0d15 0%, var(--bg) 15%, #0c1320 50%, #0d1421 85%, #0e1522 100%);
}

/* Background removed - static gradient only */

a { color: var(--text); text-decoration: none; }
a:hover { color: var(--primary); }

main { background: transparent; }

.site-header {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  padding: 32px 40px 12px;
  position: sticky;
  top: 0;
  z-index: 3000;
  background: linear-gradient(180deg, rgba(11,15,23,0.9), rgba(11,15,23,0.6));
  backdrop-filter: saturate(1.2) blur(6px);
}

.clean-header {
  background: #000000;
  backdrop-filter: none;
}
.header-main-row {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
}
.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8px;
  position: absolute;
  right: 0;
  top: 0;
}
.business-section {
  display: flex;
  align-items: center;
  gap: 10px;
  padding-top: 8px;
}
.mobile-only {
  display: none;
}
.brand { display: flex; align-items: center; gap: 10px; z-index: 1; }
.brand-mark { width: 160px; height: auto; filter: drop-shadow(0 0 18px var(--ring)); display: block; }
.clean-brand-mark { width: 200px; filter: none; }
.header-left-ctas { display: none; }
.menu-toggle { 
  display: none; 
  width: 38px; 
  height: 34px; 
  background: transparent; 
  border: 1px solid #1f2937; 
  border-radius: 8px; 
  align-items: center; 
  justify-content: center; 
  position: absolute; 
  right: 0; 
  top: 0; 
  flex-direction: column;
  gap: 0;
  z-index: 3001;
}
.menu-toggle span { 
  display: block; 
  width: 20px; 
  height: 2px; 
  background: var(--text); 
  box-shadow: 0 0 8px rgba(14,165,233,0.45);
  transition: all 0.3s ease;
  position: absolute;
}
.menu-toggle .line1 {
  transform: translateY(-4px);
}
.menu-toggle .line2 {
  transform: translateY(4px);
}
.menu-toggle.open .line1 {
  transform: translateY(0) rotate(45deg);
}
.menu-toggle.open .line2 {
  transform: translateY(0) rotate(-45deg);
}
.nav { display: flex; gap: 18px; align-items: center; }
.nav a { color: var(--muted); font-weight: 500; display: inline-flex; align-items: center; line-height: 1; }
.site-header .btn { display: inline-flex; align-items: center; line-height: 1; }
.nav a:hover { color: var(--text); }
.lang-pill {
  position: relative;
  display: inline-flex;
  background: rgba(15, 23, 36, 0.5);
  border: 1px solid rgba(14, 165, 233, 0.2);
  border-radius: 20px;
  padding: 3px;
  gap: 4px;
}
.lang-pill-indicator {
  display: none;
}
.lang-pill-btn {
  position: relative;
  background: transparent;
  border: 1px solid transparent;
  color: var(--muted);
  font-weight: 600;
  font-size: 14px;
  padding: 6px 16px;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 17px;
}
.lang-pill-btn.active {
  color: var(--primary);
  border-color: var(--primary);
  background: rgba(14, 165, 233, 0.05);
}
.lang-pill-btn:hover:not(.active) {
  color: var(--text);
  border-color: rgba(14, 165, 233, 0.3);
}

.hero {
  margin: 32px auto 0;
  padding: 48px 40px 56px;
  text-align: center;
  position: relative;
  overflow: hidden;
  background: transparent;
}
.hero-inner { display: grid; grid-template-columns: 1fr; gap: 24px; align-items: center; }
.hero-copy { text-align: center; }
.hero-visual { display: none; }
.hero h1 { font-size: 48px; line-height: 1.1; margin: 0 0 12px; }
.hero p { color: var(--muted); margin: 0 auto 24px; max-width: 720px; }
.cta-row { display: flex; gap: 12px; justify-content: center; }
.btn { display: inline-block; padding: 12px 18px; border-radius: 10px; border: 1px solid transparent; }
.btn.primary { background: var(--primary); color: #0b1220; font-weight: 700; box-shadow: 0 0 18px rgba(14,165,233,0.5), 0 0 2px rgba(14,165,233,0.9) inset; }
.btn.primary:hover { background: var(--primary-600); box-shadow: 0 0 26px rgba(14,165,233,0.7), 0 0 2px rgba(14,165,233,0.9) inset; }
.btn.ghost { border-color: #1f2937; color: var(--text); }
.btn.ghost:hover { border-color: var(--primary); color: var(--primary); }

/* Neon heading glow */
.hero h1 { text-shadow: 0 0 6px rgba(14,165,233,0.3), 0 0 12px rgba(14,165,233,0.15); }

/* Perspective grid floor under hero */
/* Remove old local floor grid; global grid handles horizon */
.hero::before { display: none; }
/* ensure hero content sits above floor */
.hero > * { position: relative; z-index: 1; }

/* Pinned scroll removed: hero sits under sticky header */

.features {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16px;
  margin: 12px auto 64px;
  padding: 0 40px;
}
.feature { background: linear-gradient(var(--panel), var(--panel)) padding-box, radial-gradient(120% 120% at 0% 0%, rgba(14,165,233,0.25), rgba(2,132,199,0.08)) border-box; border: 1px solid transparent; border-radius: 12px; padding: 18px; text-align: left; box-shadow: inset 0 0 0 1px rgba(2,132,199,0.2), 0 0 18px rgba(14,165,233,0.12); }
.feature h3 { margin: 0 0 6px; font-size: 18px; }
.feature p { margin: 0; color: var(--muted); }
.feature:hover { box-shadow: inset 0 0 0 1px rgba(2,132,199,0.4), 0 0 28px rgba(14,165,233,0.25); }

.site-footer { border-top: 1px solid #131b2b; padding: 20px; text-align: center; color: var(--muted); }

.page { 
  max-width: 1120px; 
  margin: 64px auto; 
  padding: 0 40px; 
  min-height: 60vh;
}
.page h2 { 
  font-size: 42px; 
  margin: 0 0 32px; 
  text-shadow: 0 0 6px rgba(14,165,233,0.3), 0 0 12px rgba(14,165,233,0.15);
}
.contact-content { 
  display: flex; 
  flex-direction: column; 
  gap: 48px; 
  max-width: 600px;
}
.contact-section h3 { 
  font-size: 24px; 
  margin: 0 0 16px; 
  color: var(--primary);
}
.contact-link { 
  font-size: 18px; 
  color: var(--text); 
  font-weight: 500;
  display: inline-block;
}
.contact-link:hover { 
  color: var(--primary);
}
.contact-info { 
  margin: 0 0 16px; 
  line-height: 1.6; 
  color: var(--text);
}
.contact-info strong { 
  color: var(--text); 
  font-weight: 700;
}

.content-section { margin: 40px auto; padding: 0 40px; }
.content-section h2 { margin: 0 0 8px; font-size: 22px; }
.content-section p { margin: 0; color: var(--muted); }

/* Navigation business section */
.business-label { color: var(--muted); font-size: 14px; font-weight: 500; }
.business-btn { 
  padding: 6px 14px !important; 
  font-size: 13px !important;
  font-weight: 600 !important;
}

/* Hero subtitle */
.hero-subtitle { font-size: 18px; font-style: italic; }

/* Section title */
.section-title { 
  text-align: center; 
  font-size: 32px; 
  font-weight: 700; 
  margin: 0 0 32px; 
  text-shadow: 0 0 6px rgba(14,165,233,0.3), 0 0 12px rgba(14,165,233,0.15);
}

/* Process section */
.process-section { 
  margin: 64px auto; 
  padding: 0 40px; 
  background: transparent;
}
.process-steps { 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  gap: 16px; 
  flex-wrap: wrap;
}
.process-step { 
  background: linear-gradient(var(--panel), var(--panel)) padding-box, radial-gradient(120% 120% at 0% 0%, rgba(14,165,233,0.25), rgba(2,132,199,0.08)) border-box;
  border: 1px solid transparent; 
  border-radius: 12px; 
  padding: 24px 20px; 
  min-width: 180px;
  text-align: center;
  box-shadow: inset 0 0 0 1px rgba(2,132,199,0.2), 0 0 18px rgba(14,165,233,0.12);
}
.step-content { 
  font-weight: 600; 
  font-size: 16px;
}
.process-arrow { 
  font-size: 32px; 
  color: var(--primary); 
  font-weight: 700;
}

/* Quality section */
.quality-section { 
  margin: 64px auto; 
  padding: 64px 40px;
  text-align: center;
  background: transparent;
}
.quality-text { 
  font-size: 28px; 
  font-weight: 700; 
  line-height: 1.4;
  margin: 0;
  text-shadow: 0 0 6px rgba(14,165,233,0.3), 0 0 12px rgba(14,165,233,0.15);
}

/* Podcast section */
.podcast-section { 
  margin: 64px auto; 
  padding: 0 40px;
  text-align: center;
  background: transparent;
}

/* Our setups section */
.our-setups-section { 
  margin: 64px auto; 
  padding: 0 40px;
  background: transparent;
}
.setups-grid { 
  display: grid; 
  grid-template-columns: repeat(3, 1fr); 
  gap: 24px;
}
.setup-card { 
  background: linear-gradient(var(--panel), var(--panel)) padding-box, radial-gradient(120% 120% at 0% 0%, rgba(14,165,233,0.25), rgba(2,132,199,0.08)) border-box;
  border: 1px solid transparent; 
  border-radius: 12px; 
  padding: 20px;
  box-shadow: inset 0 0 0 1px rgba(2,132,199,0.2), 0 0 18px rgba(14,165,233,0.12);
  transition: box-shadow 0.3s ease;
}
.setup-card:hover { 
  box-shadow: inset 0 0 0 1px rgba(2,132,199,0.4), 0 0 28px rgba(14,165,233,0.25);
}
.setup-image { 
  width: 100%; 
  height: 240px; 
  background: rgba(2,132,199,0.1);
  border-radius: 8px; 
  display: flex; 
  align-items: center; 
  justify-content: center;
  color: var(--muted);
  font-size: 18px;
  margin-bottom: 16px;
}
.setup-card h3 { 
  margin: 0; 
  font-size: 18px; 
  font-weight: 600;
  text-align: center;
}

/* Newsletter section */
.newsletter-section { 
  margin: 64px auto 80px; 
  padding: 0 40px;
  text-align: center;
  background: transparent;
}
.newsletter-form { 
  display: flex; 
  gap: 12px; 
  max-width: 600px; 
  margin: 0 auto;
  justify-content: center;
}
.newsletter-input { 
  flex: 1;
  padding: 12px 18px; 
  border-radius: 10px; 
  border: 1px solid #1f2937;
  background: var(--panel);
  color: var(--text);
  font-size: 16px;
}
.newsletter-input:focus { 
  outline: 2px solid var(--primary);
  border-color: var(--primary);
}

@media (max-width: 1120px) {
  .features { grid-template-columns: 1fr; padding: 0 20px; }
  .hero { padding: 32px 16px 44px; }
  .hero h1 { font-size: 38px; }
  .hero p { font-size: 16px; }
  .site-header { padding: 32px 12px 16px; }
  .process-section { padding: 0 20px; }
  .quality-section { padding: 64px 20px; }
  .podcast-section { padding: 0 20px; }
  .our-setups-section { padding: 0 20px; }
  .newsletter-section { padding: 0 20px; }
  .content-section { padding: 0 20px; }
  .brand-mark { width: 140px; }
  .clean-brand-mark { width: 175px; }
  .menu-toggle { display: inline-flex; }
  .nav { position: fixed; top: 56px; left: 50%; transform: translateX(-50%); width: calc(100% - 24px); max-width: 400px; background: #0f1724; border: 1px solid #131b2b; border-radius: 12px; padding: 16px; display: none; flex-direction: column; gap: 12px; box-shadow: 0 18px 40px rgba(0,0,0,0.55); z-index: 2000; }
  .nav.open { display: flex; }
  .nav a { padding: 14px 16px; width: 100%; justify-content: center; font-size: 16px; }
  .site-header .btn { justify-content: center; }
  .lang-pill { width: auto; max-width: 200px; margin: 0 auto; }
  
  /* Mobile styles for new sections */
  .header-right { width: 100%; align-items: center; }
  .desktop-only { display: none; }
  .mobile-only { display: flex !important; flex-direction: column; gap: 8px; width: 100%; align-items: center; padding-top: 16px; border-top: 1px solid rgba(14, 165, 233, 0.2); margin-top: 8px; }
  .business-label { text-align: center; font-size: 14px; }
  .business-btn { width: auto !important; padding: 8px 20px !important; }
  .section-title { font-size: 28px; }
  .process-steps { flex-direction: column; }
  .process-arrow { transform: rotate(90deg); }
  .quality-text { font-size: 22px; }
  .setups-grid { grid-template-columns: 1fr; }
  .newsletter-form { flex-direction: column; }
  .newsletter-input { width: 100%; font-size: 16px; }
  .page { padding: 0 20px; margin: 48px auto; }
  .page h2 { font-size: 32px; }
  .contact-section h3 { font-size: 20px; }
  .contact-link { font-size: 16px; }
}

@media (min-width: 1121px) {
  .hero { text-align: center; }
  .hero-inner { grid-template-columns: 1fr; }
  .hero-copy { text-align: center; }
}

/* Mobile menu backdrop */
.nav-backdrop { position: fixed; inset: 0; background: rgba(2,8,23,0.95); opacity: 0; pointer-events: none; transition: opacity 250ms ease; z-index: 1500; }
.nav-backdrop.show { opacity: 1; pointer-events: auto; }

/* Landing page split selector */
.landing-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.split-selector {
  display: flex;
  width: 100%;
  height: 100%;
}

.split-half {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

/* Background image layer */
.split-bg {
  position: absolute;
  inset: 0;
  background-image: var(--bg-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.35;
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 0;
  filter: grayscale(0.3) brightness(0.8);
}

.split-half:hover .split-bg {
  transform: scale(1.1);
  opacity: 0.5;
  filter: grayscale(0) brightness(1);
}

/* Gradient overlay */
.split-half::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(11,15,23,0.85) 0%,
    rgba(14,165,233,0.15) 50%,
    rgba(11,15,23,0.85) 100%
  );
  transition: all 0.5s ease;
  z-index: 1;
}

.split-half:hover::before {
  background: linear-gradient(
    135deg,
    rgba(11,15,23,0.7) 0%,
    rgba(14,165,233,0.25) 50%,
    rgba(11,15,23,0.7) 100%
  );
}

.split-half:hover {
  flex: 1.15;
}

.split-left {
  border-right: 1px solid rgba(14,165,233,0.2);
}

.split-left::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 2px;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, var(--primary) 50%, transparent 100%);
  opacity: 0;
  transition: opacity 0.5s ease;
}

.split-left:hover::after {
  opacity: 0.6;
  box-shadow: 0 0 20px rgba(14,165,233,0.6);
}

.split-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 40px;
  transition: all 0.5s ease;
}

.split-title {
  font-size: 64px;
  font-weight: 900;
  margin: 0;
  letter-spacing: 0.02em;
  text-shadow: 
    0 2px 30px rgba(0,0,0,0.9),
    0 0 10px rgba(14,165,233,0.4),
    0 0 20px rgba(14,165,233,0.2),
    0 0 30px rgba(14,165,233,0.1);
  transition: all 0.5s ease;
}

.split-half:hover .split-title {
  font-size: 72px;
  text-shadow: 
    0 2px 40px rgba(0,0,0,1),
    0 0 20px rgba(14,165,233,0.8),
    0 0 40px rgba(14,165,233,0.5),
    0 0 60px rgba(14,165,233,0.2);
  transform: translateY(-8px);
  letter-spacing: 0.05em;
}

/* Mobile responsive */
@media (max-width: 1120px) {
  .split-selector {
    flex-direction: column;
  }
  
  .split-left {
    border-right: none;
    border-bottom: 1px solid rgba(14,165,233,0.2);
  }
  
  .split-left::after {
    width: 100%;
    height: 2px;
    top: auto;
    bottom: 0;
    background: linear-gradient(90deg, transparent 0%, var(--primary) 50%, transparent 100%);
  }
  
  .split-content {
    padding: 30px;
  }
  
  .split-title {
    font-size: 42px;
  }
  
  .split-half:hover .split-title {
    font-size: 48px;
  }
  
  .split-bg {
    opacity: 0.4;
  }
  
  .split-half:hover .split-bg {
    opacity: 0.55;
  }
}

/* Products Cyber - Modern Tron Aesthetic */
.products-cyber {
  background: transparent;
  padding: 0;
  position: relative;
  overflow: hidden;
  animation: pageEnter 0.8s ease-out;
}

@keyframes pageEnter {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.products-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: var(--bg-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: scroll;
  opacity: 0.35;
  z-index: 0;
  pointer-events: none;
  transform: scale(1.4) rotate(180deg);
  transform-origin: center;
  animation: bgZoomIn 1.2s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes bgZoomIn {
  from {
    transform: scale(1.5) rotate(180deg);
    opacity: 0;
  }
  to {
    transform: scale(1.4) rotate(180deg);
    opacity: 0.35;
  }
}

.products-cyber > * {
  position: relative;
  z-index: 1;
}

/* Cyber Corners - Angular decorative elements */
.cyber-corner {
  position: absolute;
  width: 24px;
  height: 24px;
  border: 2px solid var(--primary);
  pointer-events: none;
  opacity: 0.6;
  transition: all 0.4s ease;
}

.cyber-corner.top-left,
.cyber-block-corner.tl {
  top: 0;
  left: 0;
  border-right: none;
  border-bottom: none;
  box-shadow: -3px -3px 12px rgba(14,165,233,0.3);
}

.cyber-corner.top-right,
.cyber-block-corner.tr {
  top: 0;
  right: 0;
  border-left: none;
  border-bottom: none;
  box-shadow: 3px -3px 12px rgba(14,165,233,0.3);
}

.cyber-corner.bottom-left,
.cyber-block-corner.bl {
  bottom: 0;
  left: 0;
  border-right: none;
  border-top: none;
  box-shadow: -3px 3px 12px rgba(14,165,233,0.3);
}

.cyber-corner.bottom-right,
.cyber-block-corner.br {
  bottom: 0;
  right: 0;
  border-left: none;
  border-top: none;
  box-shadow: 3px 3px 12px rgba(14,165,233,0.3);
}

/* Hero Section */
.cyber-hero {
  position: relative;
  min-height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120px 40px 80px;
  overflow: hidden;
  animation: heroSlideUp 0.8s ease-out 0.2s backwards;
}

@keyframes heroSlideUp {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cyber-grid-bg {
  position: absolute;
  inset: 0;
  background-image: 
    linear-gradient(rgba(14,165,233,0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(14,165,233,0.03) 1px, transparent 1px);
  background-size: 40px 40px;
  opacity: 0.5;
  pointer-events: none;
}

.cyber-hero-content {
  position: relative;
  text-align: center;
  padding: 60px 80px;
  max-width: 800px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
}

.cyber-hero-title {
  font-size: 64px;
  font-weight: 900;
  margin: 0;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  z-index: 1;
}

.cyber-divider {
  width: 120px;
  height: 2px;
  background: linear-gradient(90deg, transparent 0%, var(--primary) 50%, transparent 100%);
  margin: 32px auto 0;
  box-shadow: 0 0 20px rgba(14,165,233,0.8);
}

/* Blocks Container - Dynamic Layout */
.cyber-blocks-container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 80px 40px 60px;
  position: relative;
}

.cyber-block {
  position: relative;
  overflow: hidden;
  margin-bottom: 60px;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  animation: blockFadeIn 0.8s ease-out backwards;
}

.cyber-block:hover {
  transform: rotate(0deg) !important;
}

@keyframes blockFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Dynamic asymmetric positioning */
.cyber-block-large {
  width: 75%;
  margin-left: auto;
  margin-right: 40px;
  min-height: 550px;
  transform: translateX(-20px) rotate(-0.5deg);
  z-index: 4;
  animation-delay: 0.5s;
}

.cyber-block-large .cyber-block-inner {
  flex-direction: row-reverse;
}

.cyber-block-large .cyber-block-text {
  padding: 40px 40px 40px 20px;
}

.cyber-block-large:hover .cyber-block-text {
  transform: translateX(-10px);
}

.cyber-block-medium:nth-of-type(2) {
  width: 55%;
  margin-left: 0;
  margin-right: auto;
  min-height: 450px;
  margin-top: -80px;
  transform: translateX(40px) rotate(0.8deg);
  z-index: 3;
  animation-delay: 0.7s;
}

.cyber-block-medium:nth-of-type(3) {
  width: 60%;
  margin-left: auto;
  margin-right: 0;
  min-height: 420px;
  margin-top: -40px;
  transform: translateX(-60px) rotate(-0.6deg);
  z-index: 2;
  animation-delay: 0.9s;
}

.cyber-block-medium:nth-of-type(3) .cyber-block-inner {
  flex-direction: row-reverse;
}

.cyber-block-medium:nth-of-type(3) .cyber-block-text {
  padding: 30px 30px 30px 20px;
}

.cyber-block-medium:nth-of-type(3):hover .cyber-block-text {
  transform: translateX(-10px);
}

.cyber-block-wide {
  width: 85%;
  margin-left: 80px;
  margin-right: auto;
  min-height: 480px;
  margin-top: -60px;
  transform: rotate(0.4deg);
  z-index: 1;
  animation-delay: 1.1s;
}

/* Inner layout - image and text side by side */
.cyber-block-inner {
  display: flex;
  align-items: center;
  gap: 40px;
  min-height: inherit;
}

/* Image wrapper with borders and corners */
.cyber-image-wrapper {
  position: relative;
  flex: 2;
  min-height: 400px;
  border: 1px solid rgba(14,165,233,0.2);
  background: linear-gradient(135deg, rgba(14,165,233,0.03) 0%, rgba(2,132,199,0.01) 100%);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 20px 100%, 0 calc(100% - 20px));
}

.cyber-block-large .cyber-image-wrapper {
  min-height: 450px;
}

.cyber-block-medium .cyber-image-wrapper {
  min-height: 380px;
}

.cyber-block-wide .cyber-image-wrapper {
  min-height: 400px;
}

.cyber-block:hover .cyber-image-wrapper {
  border-color: rgba(14,165,233,0.5);
  background: linear-gradient(135deg, rgba(14,165,233,0.05) 0%, rgba(2,132,199,0.02) 100%);
  box-shadow: 
    inset 0 0 0 1px rgba(14,165,233,0.3),
    0 20px 60px rgba(0,0,0,0.5),
    0 0 40px rgba(14,165,233,0.15);
}

.cyber-block-corner {
  position: absolute;
  width: 16px;
  height: 16px;
  border: 1px solid var(--primary);
  opacity: 0;
  transition: all 0.4s ease;
  z-index: 3;
}

.cyber-block:hover .cyber-block-corner {
  opacity: 0.8;
}

.cyber-block-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  display: block;
}

.cyber-block:hover .cyber-block-image {
  transform: scale(1.08);
}

/* Text content next to image */
.cyber-block-text {
  flex: 1;
  padding: 40px 20px 40px 40px;
  transition: all 0.4s ease;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
}

.cyber-block-medium .cyber-block-text {
  padding: 30px 20px 30px 30px;
}

.cyber-block:hover .cyber-block-text {
  transform: translateX(10px);
}

.cyber-block-label {
  display: block;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 0.2em;
  color: var(--primary);
  margin-bottom: 12px;
  text-shadow: 0 0 10px rgba(14,165,233,0.8);
}

.cyber-block-title {
  font-size: 36px;
  font-weight: 300;
  margin: 0;
  line-height: 1.2;
  letter-spacing: 0.02em;
  color: var(--text);
  text-shadow: 0 2px 20px rgba(0,0,0,0.9);
}

/* Footer Section */
.cyber-footer {
  padding: 100px 40px 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: blockFadeIn 0.8s ease-out 1.3s backwards;
}

.cyber-footer-frame {
  position: relative;
  padding: 60px 100px;
  border: 1px solid rgba(14,165,233,0.2);
  background: linear-gradient(135deg, rgba(14,165,233,0.03) 0%, rgba(2,132,199,0.01) 100%);
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.cyber-footer-btn {
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 0.12em;
  padding: 18px 48px;
  position: relative;
  z-index: 1;
}

/* Responsive Cyber Design */
@media (max-width: 1120px) {
  .cyber-hero {
    min-height: 40vh;
    padding: 80px 20px 60px;
  }
  
  .cyber-hero-content {
    padding: 40px 40px;
  }
  
  .cyber-hero-title {
    font-size: 38px;
  }
  
  .cyber-divider {
    width: 80px;
    margin-top: 24px;
  }
  
  .cyber-blocks-container {
    padding: 60px 20px 80px;
  }
  
  .cyber-block {
    margin-bottom: 40px;
  }
  
  .cyber-block-large,
  .cyber-block-medium:nth-of-type(2),
  .cyber-block-medium:nth-of-type(3),
  .cyber-block-wide {
    width: 100% !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
    margin-top: 0 !important;
    transform: none !important;
    min-height: auto;
  }
  
  .cyber-block-inner {
    flex-direction: column;
    gap: 24px;
  }
  
  .cyber-image-wrapper {
    width: 100%;
    min-height: 300px;
  }
  
  .cyber-block-text {
    padding: 24px;
    width: 100%;
  }
  
  .cyber-block:hover .cyber-block-text {
    transform: translateY(-8px);
  }
  
  .cyber-block-title {
    font-size: 28px;
  }
  
  .cyber-footer {
    padding: 80px 20px 100px;
  }
  
  .cyber-footer-frame {
    padding: 40px 40px;
  }
  
  .cyber-footer-btn {
    font-size: 13px;
    padding: 16px 40px;
  }
  
  .cyber-corner {
    width: 18px;
    height: 18px;
  }
}
